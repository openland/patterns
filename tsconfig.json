{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "CommonJS",
        "strict": true,
        "outDir": "./dist",
        "lib": [
            "es2016",
            "DOM",
            "ES2018.AsyncIterable"
        ],
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src"
    ]
}